	<profiles>
		<profile>

			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<spring.profiles.active>default</spring.profiles.active>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<spring.profiles.active>test</spring.profiles.active>
				<customFinalName>idm-backend</customFinalName>
		     		<skip.gui>true</skip.gui>
			</properties>
			<build>
				<finalName>idm-backend</finalName>

			</build>
		</profile>
		<profile>
			<id>release</id>
			<properties>
				<spring.profiles.active>release</spring.profiles.active>
				<customFinalName>idm-backend</customFinalName>
			</properties>
		</profile>
		  <profile>
		    <id>Windows</id>
		    <activation>
		      <os>
			<family>Windows</family>
		      </os>
		    </activation>
		    <properties>
		      <script.extension></script.extension>
		    </properties>
		  </profile>
		  <profile>
		    <id>unix</id>
		    <activation>
		      <os>
			<family>unix</family>
		      </os>
		    </activation>
		    <properties>
			<customFinalName>idm-UNUSEDNAME</customFinalName>
		      <script.extension>modules-link-or-skip</script.extension>
		    </properties>
		  </profile>
		<profile>
			<id>dev</id>
			<!-- Optional modules - could be added without dependency -->
			<dependencies>
				<dependency>
					<groupId>${project.groupId}</groupId>
					<artifactId>idm-acc</artifactId>
					<version>${project.version}</version>
				</dependency>
				<dependency>
					<groupId>${project.groupId}</groupId>
					<artifactId>idm-example</artifactId>
					<version>${project.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>dev-mysql</id>
			<!-- Optional modules - could be added without dependency -->
			<dependencies>
				<dependency>
					<groupId>${project.groupId}</groupId>
					<artifactId>idm-acc</artifactId>
					<version>${project.version}</version>
				</dependency>
				<dependency>

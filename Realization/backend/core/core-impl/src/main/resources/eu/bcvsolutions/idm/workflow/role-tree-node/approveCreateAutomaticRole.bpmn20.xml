      <extensionElements>
        <activiti:formProperty id="disapprove" type="decision"></activiti:formProperty>
        <activiti:formProperty id="approve" type="decision"></activiti:formProperty>
      </extensionElements>
    </userTask>
    <endEvent id="endevent1" name="End" activiti:async="false"></endEvent>
    <serviceTask id="servicetask1" name="Generate process name" activiti:expression="Create new automatic role ${roleService.get(entityEvent.content.role, null).getName()} on tree node ${treeNodeService.get(entityEvent.content.treeNode).getName()} " activiti:resultVariableName="processInstanceName"></serviceTask>
    <serviceTask id="servicetask2" name="Continue entity event processing" activiti:expression="#{entityEventManager.process(entityEvent)}"></serviceTask>
    <exclusiveGateway id="exclusivegateway1" name="Exclusive Gateway"></exclusiveGateway>
    <endEvent id="endevent2" name="End"></endEvent>
    <sequenceFlow id="flow47" sourceRef="servicetask2" targetRef="endevent1"></sequenceFlow>
    <sequenceFlow id="flow48" sourceRef="exclusivegateway1" targetRef="endevent2">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${decision.equals("disapprove")}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow49" sourceRef="exclusivegateway1" targetRef="servicetask2">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${decision.equals("approve")}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow50" sourceRef="usertask1" targetRef="exclusivegateway1"></sequenceFlow>
    <exclusiveGateway id="exclusivegateway2" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow52" sourceRef="exclusivegateway2" targetRef="endevent1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${skipApproving}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow53" sourceRef="exclusivegateway2" targetRef="usertask1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${!skipApproving}]]></conditionExpression>
    </sequenceFlow>
    <scriptTask id="scripttask1" name="Resolve approvers" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>// load role by id
def role = roleService.get(entityEvent.content.role, null);
def guarantees = [];
def skipApproving = false;
//
for (guarantee in role.guarantees) {
  guarantees.add(guarantee.guarantee)
}
if(guarantees.empty || guarantees.contains(applicantIdentifier)) {
  skipApproving = true;
}

execution.setVariable("guarantees", guarantees);
execution.setVariable("skipApproving", skipApproving);</script>
    </scriptTask>
    <sequenceFlow id="flow54" sourceRef="scripttask1" targetRef="exclusivegateway2"></sequenceFlow>
    <sequenceFlow id="flow55" sourceRef="servicetask1" targetRef="scripttask1"></sequenceFlow>
    <dataObject id="approve" name="approve" itemSubjectRef="xsd:string">
      <extensionElements>
        <activiti:value>{"showWarning":false,"level":"success"}</activiti:value>
      </extensionElements>
    </dataObject>
    <dataObject id="disapprove" name="disapprove" itemSubjectRef="xsd:string">
      <extensionElements>
        <activiti:value>{"showWarning":true,"level":"danger"}</activiti:value>
      </extensionElements>
    </dataObject>

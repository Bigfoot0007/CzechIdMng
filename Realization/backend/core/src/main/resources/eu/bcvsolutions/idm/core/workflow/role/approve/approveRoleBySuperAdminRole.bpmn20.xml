        </activiti:formProperty>
        <activiti:formProperty id="validFromDateOld" name="Původní platnost role od" type="date" writable="false"></activiti:formProperty>
        <activiti:formProperty id="validFromDateNew" name="Nová platnost role od" type="date"></activiti:formProperty>
        <activiti:formProperty id="validTillDateOld" name="Původní platnost role do" type="date" writable="false"></activiti:formProperty>
